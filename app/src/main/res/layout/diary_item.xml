<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/diaryDay"
        style="@style/diaryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_weight="0.5"
        android:background="@color/colorGreen"
        android:text="@string/title_diaryDay" />

    <TextView
        android:id="@+id/diaryDayDescription"
        style="@style/diaryStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_weight="3"
        android:background="@color/colorGreen1"
        android:text="@string/title_diaryDayDescription" />

    <ImageView
        android:id="@+id/diaryDay_icon"
        android:layout_width="13dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:src="@drawable/diary" />
</LinearLayout>